# Style templates for console output.
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
NC=$(tput setaf 9)
BOLD=$(tput bold)
SGR0=$(tput sgr0)

echo -e "${BOLD}${YELLOW}Running the pre-commit hook...${NC}${SGR0}"

set -e

# Tests
make test

# Style Check
make editorconfig-test

# Spell Check
make cspell-test

# Link Checker
make md-test

# Finish
echo "${BOLD}${GREEN}üç∫ You are good to go!${NC}${SGR0}"
